@model ChallangeTehnic.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Te rog sa te conectezi!";
}

<div class="text-center">
    <h1 class="display-4">Bine ai venit</h1>
    <h3 class="display-4">@ViewData["Title"]</h3>
</div>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" asp-controller="Account">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Utilizator"></label>
                    <input asp-for="Utilizator" class="form-control" />
                    <span asp-validation-for="Utilizator" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Parola"></label>
                    <input asp-for="Parola" class="form-control" />
                    <span asp-validation-for="Parola" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Conectare</button>
                    </div>
                </div>

            </form>
        </section>
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}